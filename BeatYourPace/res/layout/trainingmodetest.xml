<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bDecTargetButton"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="top|left"
                android:text="@string/sPlus"
                android:textSize="50sp" />

            <Button
                android:id="@+id/bIncTargetButton"
                android:layout_width="90dip"
                android:layout_height="100dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/sMinus"
                android:textSize="50sp" />
            
           <Button
                android:id="@+id/bTargetPaceTitle"
                android:layout_width="80dip"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/bIncTargetButton"
                android:background="@android:color/white"
                android:text="Target Pace"
                android:gravity="center"
                android:textSize="18sp" />
                
                
            <Button
                android:id="@+id/bCurrentPaceTitle"
                android:layout_width="80dip"
                android:layout_height="50dip"
                android:layout_toLeftOf="@+id/bTargetPaceTitle"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Current Pace"
                android:textSize="18sp" />
        

              <ImageText
                  android:id="@+id/bCurrentPaceValue"
                  android:layout_width="40dp"
                  android:layout_height="50dp"
                  android:layout_below="@+id/bCurrentPaceTitle"
                  android:layout_toRightOf="@+id/bDecTargetButton"
                  android:background="@android:color/white"
                  android:text="8.5"
                  android:gravity="center"
                  android:textSize="20sp" />

              <ImageText
                  android:id="@+id/bCurrentPacePreference"
                  android:layout_width="40dp"
                  android:layout_height="50dp"
                  android:layout_alignTop="@+id/bTargetPaceValue"
                  android:layout_toLeftOf="@+id/bTargetPaceTitle"
                  android:background="@android:color/white"
                  android:text="M/M"
                  android:gravity="center"
                  android:textSize="18sp" />

              <Button
                  android:id="@+id/bTargetPacePreference"
                  android:layout_width="40dp"
                  android:layout_height="50dp"
                  android:layout_alignBaseline="@+id/bIncTargetButton"
                  android:layout_alignBottom="@+id/bIncTargetButton"
                  android:layout_toLeftOf="@+id/bIncTargetButton"
                  android:background="@android:color/white"
                  android:text="KM/M"
                  android:gravity="center"
                  android:textSize="18sp" />

              <Button
                  android:id="@+id/bTargetPaceValue"
                  android:layout_width="40dp"
                  android:layout_height="50dp"
                  android:layout_alignTop="@+id/bTargetPacePreference"
                  android:layout_toLeftOf="@+id/bTargetPacePreference"
                  android:background="@android:color/white"
                  android:text="5.5"
                  android:gravity="center"
                  android:textSize="20sp" />

        </RelativeLayout>

            </FrameLayout>

     <RelativeLayout
            android:layout_width="match_parent"
  		   android:layout_height="match_parent" >

    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:orientation="horizontal" >

        <!--  change the size of the width and their alignment so the buttons are more centralized -->
        <Button
            android:layout_marginRight="10dip"
            android:id="@+id/bSongTooSlow"
            android:layout_width="160dip"
            android:layout_height="250dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="41dp"
            android:text="@string/sTooSlowButton"
            android:textSize="32sp" />

        <Button
            android:layout_marginLeft="10dip"
            android:id="@+id/bSongTooFast"
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:layout_marginTop="41dp"
            android:text="@string/sTooFastButton"
            android:textSize="32sp" />
           
        
       </FrameLayout>
        </RelativeLayout>
        
        <!--  new layout for song title only -->
     <RelativeLayout
            android:layout_width="match_parent"
  		   android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tSongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Song title"
            android:textSize="25sp" />
    </FrameLayout>   
     </RelativeLayout>
     
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageButton
                        android:id="@+id/bSkipTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_shape_oval"
                        android:contentDescription="@string/sDscrSkipTrack"
                        android:padding="1dp"
                        android:src="@drawable/medium_skip" />

                    <ImageButton
                        android:id="@+id/bPreviousTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/button_shape_oval"
                        android:contentDescription="@string/sDscrPreviousTrack"
                        android:padding="1dp"
                        android:src="@drawable/medium_previous" />

                    <ImageButton
                        android:id="@+id/bPlayAndPause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/bPreviousTrack"
                        android:background="@drawable/selector_pauseorplay"
                        android:contentDescription="@string/sDscrPlayPause"
                        android:padding="2dp"
                        android:src="@drawable/medium_play" />

                    <ImageButton
                        android:id="@+id/bStopSong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/bSkipTrack"
                        android:background="@drawable/button_shape_oval"
                        android:padding="1dp"
                        android:src="@drawable/medium_stop" />

                </RelativeLayout>
            </FrameLayout>

           
     
     
     </RelativeLayout>
     
       </RelativeLayout>
