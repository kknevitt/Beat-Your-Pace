<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0298db"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

        <Button
            android:id="@+id/bSettings"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bLetsRun"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:text="@string/sSettings"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bLetsRun"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bTrainingMode"
            android:layout_centerVertical="true"
            android:text="@string/sLetsRun"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bTrainingMode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="@string/sTrainingMode"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tLetsRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bLetsRun"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:text="@string/sLetsRunText"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tTrainingMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tLetsRun"
            android:layout_below="@+id/bTrainingMode"
            android:layout_marginTop="40dp"
            android:text="@string/sTrainingText"
            android:textColor="#000000" />

</RelativeLayout>