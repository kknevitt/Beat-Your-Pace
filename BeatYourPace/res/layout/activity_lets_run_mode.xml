<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical" >

     <!-- Artist name -->
        
        <!-- Current and Target pace -->
    

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

            <View
           android:id="@+id/SpacerA"
           android:layout_width="match_parent"
           android:layout_height="15dp"
            />
        
    </LinearLayout>
    
    
    <!-- Pace buttons -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

         <View
            android:id="@+id/Spacer1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
        
           <Button
               android:id="@+id/bDecTarget"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1.5"
               android:background="@drawable/button_color_gradualpurple"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:text="@string/sMinus" />

		<View
		    android:id="@+id/Spacer2"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_gravity="left"
		    android:layout_weight="0.2" />

           <Button
               android:id="@+id/bIncTarget"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1.5"
               android:background="@drawable/button_color_gradualpurple"
               android:textSize="35sp"
               android:textColor="@color/white"
              android:text="@string/sPlus" />

           <View
            android:id="@+id/Spacer3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
           
           
    </LinearLayout>

    <View
           android:id="@+id/SpacerY"
           android:layout_width="match_parent"
           android:layout_height="15dp"
            />
    
    
<!-- Music Player controllers -->
       <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="@drawable/background_gradient_bluetowhite"
        android:orientation="horizontal" >

            <View
            android:id="@+id/Spacer7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
            
           <ImageButton
               android:id="@+id/bPreviousTrack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/medium_previous"
               android:contentDescription="@string/sDscrPreviousTrack"
               android:layout_gravity="center"
               android:background="@drawable/button_shape_oval" />
           <View
            android:id="@+id/Spacer8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.2" />

           <ImageButton
               android:id="@+id/bPlayAndPause"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/medium_play"
               android:contentDescription="@string/sDscrPlayPause"
               android:layout_gravity="center"
               android:background="@drawable/button_shape_oval" />
           <View
            android:id="@+id/Spacer9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.2" />

           <ImageButton
               android:id="@+id/bStopSong"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/medium_stop"
               android:contentDescription="@string/sDscrStop"
               android:layout_gravity="center"
               android:background="@drawable/button_shape_oval" />

           <View
            android:id="@+id/Spacer10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
           
           <ImageButton
               android:id="@+id/bSkipTrack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/medium_skip"
               android:contentDescription="@string/sDscrSkipTrack"
               android:layout_gravity="center"
               android:background="@drawable/button_shape_oval" />
        <View
            android:id="@+id/Spacer11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
          </LinearLayout>
          
           <View
           android:id="@+id/SpacerZ"
           android:layout_width="match_parent"
           android:layout_height="15dp"
            />
           
      <TextView
           android:id="@+id/tSongName"
           android:layout_width="match_parent"
           android:layout_height="55dp"
           android:background="#0298db"
           android:textColor="#FFFFFF"
           android:text="@string/sSongDetails"
           android:textSize="18sp"
           android:textStyle="bold"
           android:gravity="center" />
           
                      <View
           android:id="@+id/SpacerZ2"
           android:layout_width="match_parent"
           android:layout_height="25dp"
            />
       
	<!-- Too fast and too slow buttons -->

       <LinearLayout
           android:id="@+id/linearLayout5"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
                 <View
            android:id="@+id/Spacer20"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
       
       <Button
           android:id="@+id/bSongTooSlow"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:layout_weight="0.5"
           android:background="@drawable/button_color_gradualblue"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:text="@string/sTooFastButton" />

         <View
            android:id="@+id/Spacer21"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
       <Button
           android:id="@+id/bSongTooFast"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:layout_weight="0.5"
           android:background="@drawable/button_color_gradualblue"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:text="@string/sTooSlowButton" />
       
                <View
            android:id="@+id/Spacer23"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="0.2" />
       </LinearLayout>
       
    <LinearLayout
        android:id="@+id/linearLayout40"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       <!-- Blank spacer -->
		<View
           android:id="@+id/Spacer30"
           android:layout_width="match_parent"
           android:layout_height="15dp"
            />
	   </LinearLayout>	
       
       
</LinearLayout>