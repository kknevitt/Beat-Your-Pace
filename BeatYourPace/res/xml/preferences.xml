<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory
        android:title="Default Settings" android:fragment="@string/action_settings">
		<ListPreference 
		    android:title="@string/sSetDefaultDistanceUnits"
          	android:summary="Select whether you want pace to be shown in km or miles per hour"
            android:key="unitType"
            android:defaultValue="1"
            android:entries="@array/listUnitArray"
            android:entryValues="@array/listUnitValues" />
		<EditTextPreference 
		    android:dialogMessage="Enter your target pace" 
		    android:dialogTitle="@string/sSetTargetPace" 
		    android:defaultValue="6.0" 
		    android:inputType="numberDecimal" 
		    android:title="@string/sSetTargetPace" 
		    android:key="set_target_pace"/>
	</PreferenceCategory>
	
	
</PreferenceScreen>
