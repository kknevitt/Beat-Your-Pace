<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory
        android:title="Default Settings" android:fragment="@string/action_settings">
		<ListPreference 
		    android:title="@string/sSetDefaultDistanceUnits"
          	android:summary="Select whether you want the pace to be shown in kilometres or miles"
            android:key="unitType"
            android:defaultValue="1"
            android:entries="@array/listUnitArray"
            android:entryValues="@array/listUnitValues" />
		<EditTextPreference 
		    android:dialogMessage="Enter the target pace in minutes to complete 1 unit (km or mile). Enter in 0.5 increments e.g. 6.5 or 6.0." 
		    android:dialogTitle="@string/sSetTargetPace" 
		    android:defaultValue="9.0" 
		    android:inputType="numberDecimal" 
		    android:title="@string/sSetTargetPace" 
		    android:key="set_target_pace"/>
	</PreferenceCategory>
	
	
</PreferenceScreen>
